<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context="com.example.zver.myapplication.MainActivity"
    android:gravity="top">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_centerHorizontal="true" />


    <View
        style="@style/Dividing_line"
        android:id="@+id/line1"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/line1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ua_130"
        android:scaleType="matrix" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"

        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_green_dark"
        android:timeZone="Europe/Kiev"
        android:textSize="80sp" />
    <View
        style="@style/Dividing_line"
        android:id="@+id/line2"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/textClock2"
        android:layout_alignEnd="@+id/textClock2"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/gb_130"
        android:layout_below="@+id/line2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock2"
        android:timeZone="Europe/London"

        android:layout_alignBottom="@+id/line3"

        style="@style/textClockStyle" />
    <View
        android:id="@+id/line3"
        style="@style/Dividing_line"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/textClock2"
        android:layout_alignEnd="@+id/textClock2"
        />





    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/cn_130"
        android:layout_below="@+id/line3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock3"
        android:timeZone="Asia/Shanghai"
        android:layout_alignBottom="@+id/line4"
        style="@style/textClockStyle" />
    <View
        android:id="@+id/line4"
        style="@style/Dividing_line"
        android:layout_below="@+id/imageView3"
        android:layout_alignRight="@+id/textClock3"
        android:layout_alignEnd="@+id/textClock3"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/us_130"
        android:layout_below="@+id/line4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock4"
        android:timeZone="America/New_York"
        android:layout_alignBottom="@+id/line5"
        style="@style/textClockStyle" />
    <View
        android:id="@+id/line5"
        style="@style/Dividing_line"
        android:layout_below="@+id/imageView4"
        android:layout_alignRight="@+id/textClock4"
        android:layout_alignEnd="@+id/textClock4"
        />



</RelativeLayout>
